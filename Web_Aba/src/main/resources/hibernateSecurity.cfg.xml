<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.pool_size">100</property>
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>		
		<property name="current_session_context_class">thread</property>
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		<property name="show_sql">true</property>
		<property name="hibernate.default_schema">security</property>
		<property name="hibernate.show_sql">create</property>
		

		<mapping resource="cl/aba/model/security/common/Roles.hbm.xml" />
		<mapping resource="cl/aba/model/security/common/Usuarios.hbm.xml" />

	</session-factory>
</hibernate-configuration>
